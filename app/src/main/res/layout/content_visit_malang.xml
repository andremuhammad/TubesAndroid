<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.novia.semangat.VisitMalang"
    tools:showIn="@layout/app_bar_visit_malang">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerGambar"
        android:layout_width="341dp"
        android:layout_height="94dp"
        android:layout_marginTop="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:layout_width="139dp"
        android:layout_height="136dp"

        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.165"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:background="#ECEFF1">

            <ImageView
                android:id="@+id/btnWisata"
                android:layout_width="90dp"
                android:layout_height="90dp"

                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/futsal"

                app:srcCompat="@drawable/futsal" />

            <TextView
                android:id="@+id/ImageNameTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnWisata"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:gravity="center"
                android:text="Futsal"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textSize="20dp"
                tools:ignore="RtlCompat" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="139dp"
        android:layout_height="136dp"

        android:layout_marginStart="184dp"
        android:layout_marginTop="200dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="184dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:background="#ECEFF1">

            <ImageView
                android:id="@+id/btnKuliner"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"

                app:srcCompat="@drawable/badminton" />

            <TextView
                android:id="@+id/ImageNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnKuliner"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Bulutangkis"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textSize="20dp"
                tools:ignore="RtlCompat" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="139dp"
        android:layout_height="136dp"

        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        android:layout_marginRight="8dp">

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#ECEFF1">

            <ImageView
                android:id="@+id/btnPenginapan"
                android:layout_width="90dp"
                android:layout_height="90dp"

                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"

                app:srcCompat="@drawable/renang" />

            <TextView
                android:id="@+id/ImageNameTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnPenginapan"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:text="Renang"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textSize="20dp"
                tools:ignore="RtlCompat" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="139dp"
        android:layout_height="136dp"

        android:layout_marginBottom="35dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="184dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="184dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="149dp"
            android:background="#ECEFF1">

            <ImageView
                android:id="@+id/btnPendidikan"
                android:layout_width="96dp"
                android:layout_height="88dp"

                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"

                app:srcCompat="@drawable/basket" />

            <TextView
                android:id="@+id/ImageNameTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/btnPendidikan"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/btnPendidikan"
                android:layout_marginBottom="17dp"
                android:gravity="center"
                android:text="Basket"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textSize="20dp"
                tools:ignore="RtlCompat" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="76dp"
        android:layout_height="55dp"
        android:background="@drawable/homeputih"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/cardview_shadow_end_color" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="75dp"
        android:layout_height="55dp"
        android:background="@drawable/kulinerabu"
        app:layout_constraintStart_toEndOf="@+id/imageButton5"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/cardview_shadow_end_color" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="79dp"
        android:layout_height="55dp"
        android:background="@drawable/wisataabu"
        app:layout_constraintStart_toEndOf="@+id/imageButton3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/cardview_shadow_end_color" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:background="@drawable/penginapanabu"
        app:layout_constraintStart_toEndOf="@+id/imageButton4"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/cardview_shadow_end_color" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="81dp"
        android:layout_height="55dp"
        android:background="@drawable/pendidikanabu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton6"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/cardview_shadow_end_color" />



</android.support.constraint.ConstraintLayout>
